        function selectFortunePeriod(startYear, endYear) {
            // æ›´æ–°å¹´è¿åˆ†æå†…å®¹
            updateYearAnalysis(startYear, endYear);
        }

        function generateYearAnalysis() {
            const currentYear = new Date().getFullYear();
            updateYearAnalysis(currentYear, currentYear);
        }

